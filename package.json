{
  "name": "configs",
  "version": "0.0.0",
  "private": true,
  "repository": "karolis-sh/configs",
  "license": "MIT",
  "author": "Karolis Å arapnickis <hi@karolis.sh>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "run-p format:*",
    "format:package.json": "sort-package-json package.json packages/*/package.json",
    "format:prettier": "prettier --write '**/*.*'",
    "lint": "eslint . --ignore-path .gitignore",
    "prepare": "husky",
    "qa": "concurrently -c \"auto\" \"yarn:lint\" \"yarn:test\"",
    "test": "lerna run test",
    "release": "yarn && yarn lerna publish --no-private --conventional-commits --create-release github --no-commit-hooks"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "concurrently": "^9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.32.0",
    "husky": "^9.1.7",
    "lerna": "^8.2.1",
    "lint-staged": ">=15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "prettier-plugin-sh": "^0.12.8",
    "pretty-quick": "^3.1.3",
    "sort-package-json": "^2.1.0"
  },
  "engines": {
    "node": ">=14"
  }
}
